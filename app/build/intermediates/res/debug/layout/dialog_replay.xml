<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_question"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textViewReplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="    Do you want\n replay this level?"
        android:textColor="#6200EA"
        android:textSize="25dp"
        android:textStyle="italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/yesButtonReplay"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewReplay"
        android:layout_below="@+id/textViewReplay"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Yes"
        android:textSize="20dp"
        android:textStyle="italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/noButtonReplay"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewReplay"
        android:layout_alignTop="@+id/yesButtonReplay"
        android:layout_marginRight="10dp"
        android:text="No"
        android:textSize="20dp"
        android:textStyle="italic"
        android:typeface="serif" />



</RelativeLayout><!-- From: file:/D:/Android%20game/PikachuGame/app/src/main/res/layout/dialog_replay.xml -->